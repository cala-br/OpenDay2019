<UserControl x:ConnectionId='1'
    x:Class="ChatroomUWP.UserControls.ChatMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatroomUWP.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MaxWidth="564"
    MinWidth="220"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid 
        Background="{ThemeResource SystemControlAcrylicElementBrush}"
        CornerRadius="12"
        Margin="12 4"
        BorderBrush="{ThemeResource SystemControlTransparentRevealListLowBorderBrush}"
        BorderThickness="2">

        <!--#region Rows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--#endregion-->


        <!--#region Username-->
        <Grid x:ConnectionId='2' 
                                               
            Margin="8 0"
            HorizontalAlignment="Left">
            <TextBlock x:ConnectionId='5'
                x:Name="_usernameBlock"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                HorizontalAlignment="Left"
                                        />

            <Rectangle
                Margin="0 4 0 0"
                Style="{ThemeResource TitleUnderline}"/>
        </Grid>
        <!--#endregion-->

        <!--Body-->
        <TextBlock x:ConnectionId='3'
            Grid.Row="1"
            Margin="8 4"
            TextWrapping="Wrap"
                                />
        
        <!--Timestamp-->
        <TextBlock x:ConnectionId='4'
            Grid.Row="2"
            Opacity="0.8"
            FontStyle="Italic"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Margin="12 4"
            HorizontalAlignment="Right"
                                     />

    </Grid>
</UserControl>

